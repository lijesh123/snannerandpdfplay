<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <color name="custom_theme_color_start">#FFFFFF</color>
    <color name="custom_theme_color_end">#FFFFFF</color>
    <color name="pink">#FFD700</color>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:scrollbars">vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:windowBackground">@color/custom_theme_color_start</item>
        <item name="android:colorBackground">@color/custom_theme_color_end</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="PopButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="HeadText">
        <item name="android:textColor">#8B0000</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/pink</item>
    </style>

    <style name="HeadTextLeft">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#800000</item>
        <item name="android:paddingBottom">10sp</item>
    </style>

    <style name="FAQ">
        <item name="android:textColor">#800000</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MessageText">
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SNPDFFolderText">
        <item name="android:textColor">#800000</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SNPDFFolderDetail">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AnswerText">
        <item name="android:textColor">#800000</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="OptionText">
        <item name="android:textColor">#800000</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="IntroText">
        <item name="android:textColor">#008000</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">#D1FFA3</item>
    </style>

    <style name="line">
        <item name="android:background">#D8D8D8</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2sp</item>
    </style>

    <style name="gap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10sp</item>
    </style>

    <style name="gap_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35sp</item>
    </style>

    <style name="gap_horizontal">
        <item name="android:layout_width">10sp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>