<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <color name="custom_theme_color_start">#FFFFFF</color>
    <color name="custom_theme_color_end">#FFFFFF</color>
    <color name="yellow">#FFD700</color>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:scrollbars">vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:windowBackground">@color/custom_theme_color_start</item>
        <item name="android:colorBackground">@color/custom_theme_color_end</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="PopButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="HeadText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="HeadTextLeft">
        <item name="android:textColor">#8A110F</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">10sp</item>
    </style>

    <style name="FAQ">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BrowseText">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SNPDFFolderText">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SNPDFFolderDetail">
        <item name="android:textColor">#808080</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AnswerText">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="OptionText">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ClickableOptionText">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left|fill_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="ClickableOptionTextSmall">
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">left|fill_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="IntroText">
        <item name="android:textColor">#008000</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textColor">#808080</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="line">
        <item name="android:background">#D8D8D8</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2sp</item>
    </style>

    <style name="gap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10sp</item>
    </style>

    <style name="gap_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35sp</item>
    </style>

    <style name="gap_horizontal">
        <item name="android:layout_width">15sp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="first_indent">
        <item name="android:layout_width">35sp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="OptionImage">
        <item name="android:layout_width">80sp</item>
        <item name="android:layout_height">80sp</item>
    </style>
    
    <style name="OptionImageSmall">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">40sp</item>
    </style>
    
     <style name="OptionImageTiny">
        <item name="android:layout_width">25sp</item>
        <item name="android:layout_height">25sp</item>
    </style>
    
     <style name="OptionImageMedium">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
    </style>

</resources>