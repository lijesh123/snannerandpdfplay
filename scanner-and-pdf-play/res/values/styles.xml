<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <color name="custom_theme_color_start">#585858</color>
    <color name="custom_theme_color_end">#BDBDBD</color>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="android:scrollbars">vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:windowBackground">@color/custom_theme_color_start</item>
        <item name="android:colorBackground">@color/custom_theme_color_end</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF8000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#585858</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="PopButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF8000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:shadowColor">#585858</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

   <style name="HeadTextLeft">
        <item name="android:textColor">#FF8000</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MessageText">
        <item name="android:textColor">#FF8000</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AnswerText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>