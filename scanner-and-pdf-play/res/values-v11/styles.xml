<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <color name="custom_theme_color_start">#FFFFFF</color>
    <color name="custom_theme_color_end">#FFFFFF</color>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:scrollbars">vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:windowBackground">@color/custom_theme_color_start</item>
        <item name="android:colorBackground">@color/custom_theme_color_end</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="PopButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="HeadText">
        <item name="android:textColor">#F7819F</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadTextLeft">
        <item name="android:textColor">#F7819F</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MessageText">
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SNPDFFolderText">
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SNPDFFolderDetail">
        <item name="android:textColor">#013ADF</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AnswerText">
        <item name="android:textColor">#0B0B3B</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="line">
        <item name="android:background">#D8D8D8</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

</resources>