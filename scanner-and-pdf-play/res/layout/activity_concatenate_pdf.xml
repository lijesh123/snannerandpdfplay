<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.google.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adUnitId"
        ads:loadAdOnCreate="true"
        ads:testDevices="TEST_EMULATOR, 714028AE5C3B8CEEE2D9995406974941" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:orientation="vertical"
        tools:context=".ConcatenatePDFActivity" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ConcatenatePDFActivity" >

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    style="@style/OptionImage"
                    android:layout_weight="1"
                    android:contentDescription="info"
                    android:src="@drawable/info" />

                <TextView
                    style="@style/IntroText"
                    android:layout_weight="4"
                    android:text="@string/intro_concatenate" />
            </LinearLayout>

            <View style="@style/line" />

            <View style="@style/gap" />

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/pdf_file1"
                    style="@style/AnswerText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Select first PDF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/find"
                    android:onClick="pickFile1" />
            </LinearLayout>

            <EditText
                android:id="@+id/password1"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_password"
                android:inputType="textPassword" >
            </EditText>

            <View style="@style/gap" />

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/pdf_file2"
                    style="@style/AnswerText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Select second PDF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/find"
                    android:onClick="pickFile2" />
            </LinearLayout>

            <EditText
                android:id="@+id/password2"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_password"
                android:inputType="textPassword" >
            </EditText>

            <View style="@style/gap" />

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/section3"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/pdf_file3"
                    style="@style/AnswerText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Select third PDF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/find"
                    android:onClick="pickFile3" />
            </LinearLayout>

            <EditText
                android:id="@+id/password3"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_password"
                android:inputType="textPassword" >
            </EditText>

            <View style="@style/gap" />

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/section4"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/pdf_file4"
                    style="@style/AnswerText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Select fourth PDF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/find"
                    android:onClick="pickFile4" />
            </LinearLayout>

            <EditText
                android:id="@+id/password4"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_password"
                android:inputType="textPassword" >
            </EditText>

            <View style="@style/gap" />

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/section5"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/pdf_file5"
                    style="@style/AnswerText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Select fifth PDF" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/find"
                    android:onClick="pickFile5" />
            </LinearLayout>

            <EditText
                android:id="@+id/password5"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_password"
                android:inputType="textPassword" >
            </EditText>

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/add_more"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <View style="@style/gap_horizontal" />

                <ImageView
                    style="@style/OptionImage"
                    android:layout_weight="2"
                    android:contentDescription="ADD MORE"
                    android:src="@drawable/add" />

                <TextView
                    style="@style/ClickableOptionTextSmall"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="3"
                    android:background="@drawable/select_file"
                    android:onClick="addMore"
                    android:text="ADD MORE" />
            </LinearLayout>

            <View style="@style/gap" />

            <TextView
                android:id="@+id/required_fields"
                style="@style/DescriptionText"
                android:text="* First two PDFs are mandatory" />

            <View style="@style/gap" />

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button1"
                    style="@style/ButtonText"
                    android:layout_weight="1"
                    android:background="@drawable/snpdf_button"
                    android:onClick="concatenate"
                    android:paddingLeft="16sp"
                    android:paddingRight="16sp"
                    android:text="concatenate" />

                <View style="@style/gap_horizontal" />

                <Button
                    android:id="@+id/button2"
                    style="@style/ButtonText"
                    android:layout_weight="1"
                    android:background="@drawable/snpdf_button"
                    android:onClick="cancel"
                    android:paddingLeft="16sp"
                    android:paddingRight="16sp"
                    android:text="@string/cancel" />
            </LinearLayout>

            <View style="@style/gap" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>