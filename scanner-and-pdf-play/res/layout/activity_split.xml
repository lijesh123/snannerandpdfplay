<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:app="http://schemas.android.com/apk/res/com.snpdfp.activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.google.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adUnitId"
        ads:loadAdOnCreate="true"
        ads:testDevices="TEST_EMULATOR, 714028AE5C3B8CEEE2D9995406974941" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:orientation="vertical"
        tools:context=".SplitActivity" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.snpdfp.layout.ExpandablePanel
                android:id="@+id/expandable_intro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:collapsedHeight="80sp"
                app:content="@+id/value"
                app:handle="@+id/expand" >

                <LinearLayout
                    android:id="@+id/value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        style="@style/OptionImage"
                        android:layout_weight="1"
                        android:contentDescription="info"
                        android:src="@drawable/info" />

                    <TextView
                        style="@style/IntroText"
                        android:layout_weight="4"
                        android:text="@string/intro_split" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/expand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <View
                        style="@style/line"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4" />

                    <ImageView
                        style="@style/OptionImageTiny"
                        android:layout_weight="1"
                        android:contentDescription="expand-collapse"
                        android:src="@drawable/expandcollapse" />
                </LinearLayout>
            </com.snpdfp.layout.ExpandablePanel>

            <View style="@style/gap" />

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/pdf_file"
                    style="@style/AnswerText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Select the PDF to split" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/find"
                    android:onClick="pickFile" />
            </LinearLayout>

            <EditText
                android:id="@+id/password"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_password"
                android:inputType="textPassword" >
            </EditText>

            <View style="@style/gap" />

            <TextView
                android:id="@+id/message"
                style="@style/AnswerText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <View style="@style/gap" />

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/section1"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/from_number1"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_frompgnumber"
                    android:inputType="number" >
                </EditText>

                <EditText
                    android:id="@+id/to_number1"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_topgnumber"
                    android:inputType="number" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/section2"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/from_number2"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_frompgnumber"
                    android:inputType="number" >
                </EditText>

                <EditText
                    android:id="@+id/to_number2"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_topgnumber"
                    android:inputType="number" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/section3"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/from_number3"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_frompgnumber"
                    android:inputType="number" >
                </EditText>

                <EditText
                    android:id="@+id/to_number3"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_topgnumber"
                    android:inputType="number" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/section4"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/from_number4"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_frompgnumber"
                    android:inputType="number" >
                </EditText>

                <EditText
                    android:id="@+id/to_number4"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_topgnumber"
                    android:inputType="number" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/section5"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/from_number5"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_frompgnumber"
                    android:inputType="number" >
                </EditText>

                <EditText
                    android:id="@+id/to_number5"
                    style="@style/AnswerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_topgnumber"
                    android:inputType="number" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/add_more"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <View style="@style/gap_horizontal" />

                <ImageView
                    style="@style/OptionImageSmall"
                    android:layout_weight="1"
                    android:contentDescription="ADD MORE"
                    android:onClick="addMore"
                    android:src="@drawable/add" />

                <TextView
                    style="@style/ClickableOptionTextSmall"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="4"
                    android:background="@drawable/select_file"
                    android:onClick="addMore"
                    android:text="ADD MORE" />
            </LinearLayout>

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/remove_last"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal" >

                <View style="@style/gap_horizontal" />

                <ImageView
                    style="@style/OptionImageSmall"
                    android:layout_weight="1"
                    android:contentDescription="REMOVE LAST"
                    android:onClick="removeLast"
                    android:src="@drawable/remove" />

                <TextView
                    style="@style/ClickableOptionTextSmall"
                    android:layout_gravity="left|center_vertical"
                    android:layout_weight="4"
                    android:background="@drawable/select_file"
                    android:onClick="removeLast"
                    android:text="REMOVE LAST" />
            </LinearLayout>

            <View style="@style/gap" />

            <LinearLayout
                xmlns:tools="http://schemas.android.com/tools"
                style="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button1"
                    style="@style/ButtonText"
                    android:layout_weight="1"
                    android:background="@drawable/snpdf_button"
                    android:onClick="split"
                    android:paddingLeft="16sp"
                    android:paddingRight="16sp"
                    android:text="split" />

                <View style="@style/gap_horizontal" />

                <Button
                    android:id="@+id/button2"
                    style="@style/ButtonText"
                    android:layout_weight="1"
                    android:background="@drawable/snpdf_button"
                    android:onClick="cancel"
                    android:paddingLeft="16sp"
                    android:paddingRight="16sp"
                    android:text="@string/cancel" />
            </LinearLayout>

            <View style="@style/gap" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>