<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snpdfp.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.snpdfp.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/pdf" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.snpdfp.activity.ImageToPDFActivity"
            android:label="@string/title_activity_image_to_pdf" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.FileToPDFActivity"
            android:label="@string/title_activity_file_to_pdf" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.BrowsePDFActivity"
            android:label="@string/title_activity_protect_pdf" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.PickPasswordActivity"
            android:label="@string/title_activity_pick_password"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.ProtectPDFActivity"
            android:label="@string/title_activity_lock_pdf" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.ConcatenatePDFActivity"
            android:label="@string/title_activity_concatenate_pdf" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.SplitActivity"
            android:label="@string/title_activity_split" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.PickNumberActivity"
            android:label="@string/title_activity_pick_number"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>