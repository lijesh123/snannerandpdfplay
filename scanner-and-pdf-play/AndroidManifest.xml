<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snpdf.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="20" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.snpdf.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/pdf" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.snpdf.activity.ImageToPDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_image_to_pdf"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdf.activity.BrowsePDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_browse_file"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.snpdf.activity.ProtectPDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_lock_pdf"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.snpdf.activity.ConcatenatePDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_concatenate_pdf"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdf.activity.SplitActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_split"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.snpdf.activity.OpenSNPDFFolderActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_open_snpdffolder"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.snpdf.activity.PickedPDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_picked_pdf"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdf.menu.FAQActivity"
            android:label="@string/title_activity_faq" >
        </activity>
        <activity
            android:name="com.snpdf.menu.About"
            android:label="@string/title_about" >
        </activity>
        <activity
            android:name="com.snpdf.activity.ExtractTextActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_extract_text"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdf.activity.WatermarkActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_watermark"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdf.activity.RenameActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_rename"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdf.activity.PickStringActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_pick_string"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateVisible"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="com.snpdf.activity.CopyEncryptedActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_copy_encrypted"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.snpdf.activity.SNPDFSettings"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_snpdfsettings"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdf.activity.SplitOutput"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_split"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdf.activity.ScanActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_scanner"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>