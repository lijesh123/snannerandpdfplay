<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snpdfp.activity"
    android:versionCode="6"
    android:versionName="1.05" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.snpdfp.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/app_name"
            android:screenOrientation="nosensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/pdf" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.snpdfp.activity.ImageToPDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_image_to_pdf"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.FileToPDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_file_to_pdf"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.BrowsePDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_protect_pdf"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.PickPasswordActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_pick_password"
            android:screenOrientation="nosensor"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.ProtectPDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_lock_pdf"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.ConcatenatePDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_concatenate_pdf"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.SplitActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_split"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.PickNumberActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_pick_number"
            android:screenOrientation="nosensor"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.OpenSNPDFFolderActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_open_snpdffolder"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.PickedPDFActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_picked_pdf"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.menu.FAQActivity"
            android:label="@string/title_activity_faq" >
        </activity>
        <activity
            android:name="com.snpdfp.menu.About"
            android:label="@string/title_about" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.ExtractTextActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_extract_text"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.snpdfp.activity.WatermarkActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_watermark"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.RenameActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_rename"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.PickStringActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_pick_string"
            android:screenOrientation="nosensor"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.CopyEncryptedActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_copy_encrypted"
            android:screenOrientation="nosensor" >
        </activity>
        <activity
            android:name="com.snpdfp.activity.SNPDFSettings"
            android:configChanges="keyboardHidden|orientation|screenSize|screenLayout"
            android:label="@string/title_activity_snpdfsettings"
            android:screenOrientation="nosensor" >
        </activity>
    </application>

</manifest>